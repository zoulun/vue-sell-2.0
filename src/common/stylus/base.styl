.clearfix
  display: inline-block
  &:after
    content: ''
    display: block
    height: 0
    clear: both
    visibility: hidden
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  border-1px
    &::after
      -webkit-transform: acaleY(0.7)
      transform: acaleY(0.7)
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  border-1px
    &::after
      -webkit-transform: acaleY(0.5)
      transform: acaleY(0.5)